<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/linear1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:android="http://schemas.android.com/apk/res/android">



            <LinearLayout
                android:orientation="vertical"
                android:id="@+id/formatting"
                android:layout_marginTop="200px"
                android:layout_marginLeft="100px"
                android:layout_marginBottom="100px"
                android:layout_marginRight="100px"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Please Insert User ID:"
                    android:textSize="17dp"
                    android:id="@+id/text_view"
                    android:layout_weight="1" />


                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:text=""
                    android:ems="10"
                    android:id="@+id/user_id"
                    android:layout_weight="1" />

                <Button
                    android:layout_width="300px"
                    android:layout_height="150px"
                    android:layout_marginTop="100px"
                    android:layout_gravity="right"
                    android:text="Warm Up Session"
                    android:onClick="OnClickWarmUp"
                    android:id="@+id/warmup" />

                <Button
                    android:layout_width="300px"
                    android:layout_height="150px"
                    android:layout_marginTop="100px"
                    android:layout_gravity="right"
                    android:text="Experiment Phase 1"
                    android:onClick="OnClickExperiment1"
                    android:id="@+id/exp1" />

                <Button
                    android:layout_width="300px"
                    android:layout_height="150px"
                    android:layout_marginTop="100px"
                    android:layout_gravity="right"
                    android:text="Experiment Phase 2"
                    android:onClick="OnClickExperiment2"
                    android:id="@+id/exp2" />


            </LinearLayout>



    </LinearLayout>

</LinearLayout>